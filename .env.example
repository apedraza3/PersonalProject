# Environment Variables Template
# Copy this file to .env and fill in your actual values
# .env is in .gitignore and will NOT be committed

# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/portfolio_db?createDatabaseIfNotExist=true&useSSL=false&serverTimezone=UTC
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# JWT Configuration
APP_JWT_SECRET=your_jwt_secret_key_at_least_256_bits
JWT_TTL_SECONDS=86400

# Plaid Configuration (Get from https://dashboard.plaid.com/)
PLAID_ENV=sandbox
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_PRODUCTS=transactions,balance,liabilities,investments
PLAID_COUNTRY_CODES=US
PLAID_REDIRECT_URI=http://localhost:8080/plaid/callback
